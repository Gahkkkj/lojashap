@model TechInTriunfo.Models.Pedido
@{
    ViewData["Title"] = "Pedido Confirmado";
}


<div class="container-editar">
    <h1 class="mb-4">@ViewData["Title"]</h1>

    <div class="card-pedido">
        <div class="card-header-pedido">
            <h3 class="mb-0"><i class="bi bi-check-circle-fill"></i> Resumo do Pedido</h3>
        </div>
        
        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-6">
                    <h5 class="detalhe-titulo">Dados do Cliente</h5>
                    <dl class="row detalhe-item">
                        <dt class="col-sm-4">Nome:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Nome</dd>

                        <dt class="col-sm-4">Email:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Email</dd>

                        <dt class="col-sm-4">Telefone:</dt>
                        <dd class="col-sm-8">@Model.Usuario.Telefone</dd>
                    </dl>
                </div>
                
                <div class="col-md-6">
                    <h5 class="detalhe-titulo">Detalhes do Pedido</h5>
                    <dl class="row detalhe-item">
                        <dt class="col-sm-4">Número:</dt>
                        <dd class="col-sm-8">#@Model.Id.ToString("D5")</dd>

                        <dt class="col-sm-4">Data:</dt>
                        <dd class="col-sm-8">@Model.DataPedido.ToString("dd/MM/yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Total:</dt>
                        <dd class="col-sm-8">@Model.Total.ToString("C")</dd>
                    </dl>
                </div>
            </div>

            <h5 class="detalhe-titulo mb-3">Itens Comprados</h5>
            <div class="table-responsive">
                <table class="table table-pedido">
                    <thead>
                        <tr>
                            <th>Tipo</th>
                            <th>Item</th>
                            <th class="text-end">Quantidade</th>
                            <th class="text-end">Preço Unitário</th>
                            <th class="text-end">Subtotal</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Itens)
                        {
                            <tr>
                                <td>
                                    @if (item.Tipo == TechInTriunfo.Models.TipoItem.Produto)
                                    {
                                        <span class="badge badge-produto">Produto</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-servico">Serviço</span>
                                    }
                                </td>
                                <td>@item.Nome</td>
                                <td class="text-end">@item.Quantidade</td>
                                <td class="text-end">@item.ValorUnitario.ToString("C")</td>
                                <td class="text-end">@((item.Quantidade * item.ValorUnitario).ToString("C"))</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <div class="card-footer text-end">
            <a asp-controller="Produtos" asp-action="Index" class="btn btn-continuar">
                <i class="bi bi-house-door"></i> Continuar Comprando
            </a>
        </div>
    </div>
</div>