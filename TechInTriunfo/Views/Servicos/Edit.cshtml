@model TechInTriunfo.Models.Servico

<div class="container-editar">
    <h1>Editar Serviço</h1>
    
    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        
        <div class="edit-form-group">
            <label asp-for="Nome">Nome do Serviço:</label>
            <input asp-for="Nome" class="edit-form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Valor">Valor (R$):</label>
            <input asp-for="Valor" class="edit-form-control" step="0.01" required />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Descricao">Descrição:</label>
            <textarea asp-for="Descricao" class="edit-form-control" rows="4"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Salvar Alterações</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>