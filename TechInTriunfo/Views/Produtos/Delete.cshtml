@model TechInTriunfo.Models.Produto

<div class="container-editar">
    <h1>Excluir Produto</h1>
    
    <div class="delete-confirmation">
        <p>Tem certeza que deseja excluir o produto <strong>@Model.Nome</strong>?</p>
        
        @if (Model.Imagem != null)
        {
            <div class="current-image">
                <img src="data:image/png;base64,@Convert.ToBase64String(Model.Imagem)" 
                     alt="Imagem do produto" class="img-thumbnail" />
            </div>
        }
        
        <form asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            
            <div class="form-actions">
                <button type="submit" class="btn btn-danger">Confirmar Exclus√£o</button>
                <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
            </div>
        </form>
    </div>
</div>