@model TechInTriunfo.Models.Produto

<div class="container-editar">
    <h1>Cadastrar Produto</h1>
    
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="edit-form-group">
            <label asp-for="Nome">Nome:</label>
            <input asp-for="Nome" class="edit-form-control" required />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Valor">Valor (R$):</label>
            <input asp-for="Valor" class="edit-form-control" step="0.01" required />
            <span asp-validation-for="Valor" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Quantidade">Quantidade em Estoque:</label>
            <input asp-for="Quantidade" class="edit-form-control" required />
            <span asp-validation-for="Quantidade" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Descricao">Descrição:</label>
            <textarea asp-for="Descricao" class="edit-form-control" rows="4"></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>

        <div class="edit-form-group">
            <label asp-for="Imagem">Imagem do Produto:</label>
            <input type="file" name="Imagem" class="edit-form-control" 
                   accept="image/png, image/jpeg, image/jpg" required />
            <span class="form-hint">Formatos aceitos: JPG, PNG</span>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Cadastrar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>